QTableView {
    background: transparent;
}

QTableView::item {
    border: none;
    border-bottom: 1px solid rgb(204, 204, 204);
    outline: none;
}

QTableView:focus {
    border: none;
    outline: none;
}

QTableView::item:selected {
    background-color: rgba(0, 100, 180, 96);
    color: black;
}
